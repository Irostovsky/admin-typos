<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>
  <%= render 'admin/shared/head' %>
</head>

<body>

  <div id="wrapper">

    <div id="header_wrapper">

      <div id="header">
        <%= header %>
        <div class="clear"></div>
      </div>

      <div id="links">

        <div class="left">
          <%= apps %>
        </div>

        <div class="right">
          <%= login_info %>
        </div>

        <div class="clear"></div>

      </div>

    </div>

    <div id="content_wrapper">

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

      <div id="content">
        <%= yield :layout %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer_wrapper">

      <div id="footer">
        <%= Typus.admin_sub_title.html_safe %>
      </div>

    </div>

  </div>

</body>

</html>
